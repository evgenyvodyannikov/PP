<Page x:Class="isrpo_2.ClientUC"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:isrpo_2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ClientUC">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="32"/>
        </Grid.RowDefinitions>
        <ScrollViewer x:Name="ItemsListScrollViewer">
            <StackPanel x:Name="ItemList"/>
        </ScrollViewer>
        <Border Grid.Row="1" x:Name="PageButtons" Width="200" HorizontalAlignment="Right">
            <StackPanel Orientation="Horizontal" x:Name="Buttons"/>
        </Border>
    </Grid>
</Page>
